{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": ["DOM", "ES2020"],
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "composite": true,
    "types": ["node", "jest"],
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["./packages/**/*.(ts|tsx)", "./packages/**/*.d.ts"],
  "exclude": ["./lib", "./dist"]
}
